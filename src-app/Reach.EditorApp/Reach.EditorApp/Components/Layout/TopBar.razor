<div class="flex justify-between items-center bg-gray-100 dark:bg-gray-800">
    @* Logo / App *@
    <div class="flex items-center">
        <div class="relative">
            <a @onclick="@(() => ToggleAppTray())" class="cursor-pointer p-3 block">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3" />
                </svg>
            </a>
            @if (_isAppTrayOpen)
            {
                <div class="w-96 absolute top-full left-0 rounded bg-gray-100 border-gray-600 shadow-xl p-3 dark:bg-gray-900 dark:border-gray-500 border">
                    <div class="flex flex-wrap justify-between items-center gap-4">
                        @foreach (var applet in AppletContext.Applets)
                        {
                            <div class="p-4">
                                <a href="#" @onclick="@(async () => await AppletContext.SetAppletAsync(applet.Id))"
                                   class="cursor-pointer flex flex-col items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
                                    </svg>
                                    @applet.Name
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        <h1 class="font-mono text-2xl font-bold">reach/cms</h1>
    </div>

    @* User Menu *@
    <div class="relative">
        <div class="flex items-center p-3">
            <a href="#" @onclick="@(() => ToggleUserTray())" class="flex items-center gap-2">
                @* Avatar*@
                <img src="@_userContext.AvatarUrl" class="rounded-full h-10 w-10" />

                @* Menu Dots*@
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
                </svg>
            </a>

            @if (_isUserTrayOpen)
            {
                <div class="w-64 absolute top-full right-0 rounded bg-gray-100 border-gray-600 shadow-xl p-3 dark:bg-gray-900 dark:border-gray-500 border">
                    <ul>
                        <li><a class="block py-1 hover:underline" href="/account">Manage Account</a></li>
                        <li><a class="block py-1 hover:underline" href="/settings">Settings</a></li>
                        <li><hr class="block mt-2 mb-2 opacity-50" /></li>
                        <li><a class="block py-1 hover:underline" href="/account/logout">Logout</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>