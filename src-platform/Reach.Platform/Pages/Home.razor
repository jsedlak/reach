@page "/"
@layout GlobalLayout
@attribute [Authorize]

<PageTitle>Home</PageTitle>

@if (Organizations is not null && !Organizations.Any())
{
    <!-- INITIAL MESSAGE -->
    <div
        class="bg-gradient-to-br from-gray-900 to-indigo-800 text-white mb-10 mt-3 shadow-xl rounded-lg px-10 py-20 flex flex-col items-center justify-center">
        <h2 class="text-2xl font-bold mb-3">No Available Organizations</h2>
        <p class="text-lg font-light">
            It looks like you don't have any Organizations, why not
            <a href="/onboarding" class="text-indigo-200 underline">get started</a>?
        </p>
    </div>
}
else if (Organizations is not null && Organizations.Any())
{
    <div class="my-10">
        <div class="flex items-center justify-between">
            <h1 class="text-4xl">Your Organizations & Hubs</h1>
            <Button Type="ButtonType.Primary" Href="/onboarding">
                @HeroIcons.SquaresPlus("inline-block mr-2") Create Tenant
            </Button>
        </div>

        @foreach (var org in Organizations)
        {
            <div>
                <h1 class="text-2xl">@org.Name</h1>
                <div class="my-3 grid grid-cols-4 gap-4">
                    @foreach (var hub in org.Hubs)
                    {
                        var tenantDashboardUrl = $"/app/{org.Slug}/{hub.Slug}";
                        <div
                            class="border border-gray-200 hover:bg-indigo-900 cursor-pointer hover:text-white py-6 px-6 rounded-lg relative"
                            @onclick=@(() => _navigationManager.NavigateTo(tenantDashboardUrl))>
                            <div class="absolute right-2 top-2">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     fill="none"
                                     viewBox="0 0 24 24"
                                     stroke-width="1.5"
                                     stroke="currentColor"
                                     class="size-6">
                                    <path stroke-linecap="round"
                                          stroke-linejoin="round"
                                          d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"/>
                                </svg>
                            </div>
                            <a class="flex items-center gap-4"
                               href="@(tenantDashboardUrl)">
                                <div class="">
                                    <img src="@hub.IconUrl" class="rounded-lg w-10"/>
                                </div>
                                <div>
                                    <div class="font-bold flex items-center gap-2">
                                        @hub.Name
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@if (AuthenticationState is not null)
{
    if (AuthenticationState.User.Identity is { IsAuthenticated: true })
    {
        <p>Authenticated as @AuthenticationState.User.Identity.Name</p>
    }
    else
    {
        <p>Auth State is not null, but not authed</p>
    }
}
else
{
    <p>Authentication state is null...</p>
}